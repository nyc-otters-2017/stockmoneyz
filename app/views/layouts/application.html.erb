<!DOCTYPE html>
<html>
  <head>
    <title>StockMoneyz</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"/>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <header class="container">
    <div class="row">
      <h1 class="col-sm-4"><a href="/">StockMoneyz</a></h1>
      <nav class="col-sm-8 text-right">
        <% if logged_in? %>
          <p><a href="/sessions/logout">logout</a></p>
          <p><a href="/users/<%= current_user.id %>/portfolios"> portfolios </a></p>
        <%else%>
           <p><a href="/users/new"> signup </a></p>
           <p><a href="/sessions/new"> login </a></p>
        <%end%>
      </nav>
    </div>
  </header>


    <%= yield %>
  </body>
</html>
